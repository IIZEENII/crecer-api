{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "tsc",
    "typeCheck": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
        {
            "include": "../assets/**/*",
            "outDir": "dist/assets",
            "watchAssets": true
        }
    ]
  }
}
